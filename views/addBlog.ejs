                        <h1>Create New Post</h1>
                        <svg width="300" height="10">
                            <rect width="100" height="25" style="fill:rgb(234,136,89);stroke-width:0;stroke:rgb(0,0,0); " />
                        </svg>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="align-list">
                                <form action="/submit" method="post">
                                    <div class="form-group">
                                        <label for="postTitle">Post Title</label>
                                        <input type="text" class="form-control" id="postTitle" aria-describedby="titleHelp" name="title" placeholder="Enter Post Title">
                                        <small id="titleHelp" class="form-text text-muted">Think of something clever! :)</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="postCategory">Subtitle</label>
                                        <input type="text" class="form-control" id="subtitle" aria-describedby="categoryHelp" name="subtitle" placeholder="Insert Subtitle Here">
                                        <small id="categoryHelp" class="form-text text-muted">#Agile, #Technology, #Business, #Report, #Research, etc.</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="textArea">Post Body</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="20" name="postBody"></textarea>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Image Link</label>
                                        <input type="text" class="form-control" id="imageLink" aria-describedby="titleHelp" name="imageLink" placeholder="Image Link">
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="blue-button">Post</button>
                                    </div> 
                                </form>
